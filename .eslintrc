{
  "parser": "babel-eslint",
  "extends": "airbnb/base",
  "rules": {
    "arrow-body-style": [1, "as-needed"],
    "prefer-arrow-callback": 1,
    "space-before-function-paren": [2, "never"],
    "func-names": 0,
    "no-param-reassign": 1,
    "max-len": [1, 120, { "tabWidth": 2, "ignoreComments": true }],
    "prefer-template": 1
  },
  "globals": {
    "atom": true
  }
}
